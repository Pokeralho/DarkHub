<Window x:Class="DarkHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DarkHub" Height="800" Width="1260"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        Icon="/assets/DarkHub.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border CornerRadius="50" Background="#f9f7fa">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="40" Width="95" Background="#7345a1" Margin="10" Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="btnOptimizer" Click="SetActiveButton" Tag="Active" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/optimizer.png"/>
                        </Button>
                        <Button x:Name="btnClicker" Click="SetActiveButton" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/clicker.png"/>
                        </Button>
                        <Button x:Name="btnFileConverter" Click="SetActiveButton" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/converter.png"/>
                        </Button>
                        <Button x:Name="btnMetaDataEditor" Click="SetActiveButton" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/exif.png"/>
                        </Button>
                        <Button x:Name="btnTextEditor" Click="SetActiveButton" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/python.png"/>
                        </Button>
                        <Button x:Name="btnExtrairTexto" Click="SetActiveButton" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/extrairtxt.png"/>
                        </Button>
                        <Button x:Name="btnYTDownloader" Click="SetActiveButton" Style="{StaticResource MenuButtonStyle}">
                            <Image Source="/assets/youtubedw.png"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="{x:Null}" Grid.Column="1"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="1135,-15,0,0" HorizontalAlignment="Left" Width="160">
            <Button Click="MinimizeWindow" Style="{StaticResource MenuButtonStyle}">
                <TextBlock Text="—" FontWeight="Bold" Foreground="#7345a1" FontSize="18"/>
            </Button>
            <Button Click="CloseWindow" Style="{StaticResource MenuButtonStyle}">
                <TextBlock Text="X" FontWeight="Bold" Foreground="#7345a1" FontSize="18"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>