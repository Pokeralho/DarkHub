<Page x:Class="DarkHub.FileConverter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DarkHub"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileConverter">

    <Page.Resources>
        <ControlTemplate x:Key="NoHoverBtn" TargetType="Button">
            <Border Background="{TemplateBinding Background}"  
                    BorderBrush="{TemplateBinding BorderBrush}"  
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                                 VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>
        </ControlTemplate>

        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template" Value="{StaticResource NoHoverBtn}"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <FontFamily x:Key="JetBrainsMono">JetBrains Mono</FontFamily>
    </Page.Resources>

    <Grid Background="{x:Null}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock FontFamily="JetBrains Mono" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20">
                Conversor de Arquivos
            </TextBlock>

            <Button Content="Selecionar Arquivos" Width="200" Click="SelectFiles_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="SelectedFilesText" Text="Nenhum arquivo selecionado!" Foreground="Black" 
                       FontFamily="{StaticResource JetBrainsMono}" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <Button Content="Escolher Diretório de Saída" Width="200" Click="SelectOutputDir_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="OutputDirText" Text="Saída: Mesmo diretório dos arquivos" Foreground="Black" 
                       FontFamily="{StaticResource JetBrainsMono}" HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"/>

            <TextBlock Text="Formato de Saída:" Foreground="Black" FontSize="14" FontFamily="{StaticResource JetBrainsMono}" 
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <ComboBox x:Name="OutputFormatCombo" Width="200" Margin="0,0,0,20" FontFamily="{StaticResource JetBrainsMono}">
                <ComboBoxItem Content="PNG"/>
                <ComboBoxItem Content="JPG"/>
                <ComboBoxItem Content="WEBP"/>
                <ComboBoxItem Content="BMP"/>
                <ComboBoxItem Content="GIF"/>
                <ComboBoxItem Content="TIFF"/>
                <ComboBoxItem Content="MP4"/>
                <ComboBoxItem Content="AVI"/>
                <ComboBoxItem Content="MKV"/>
                <ComboBoxItem Content="MP3"/>
                <ComboBoxItem Content="WAV"/>
                <ComboBoxItem Content="AAC"/>
            </ComboBox>

            <Button Content="Converter" Width="200" Click="ConvertFiles_Click"/>
        </StackPanel>
    </Grid>
</Page>