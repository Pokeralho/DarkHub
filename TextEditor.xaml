<Page x:Class="DarkHub.TextEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Text Editor" Background="{x:Null}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#ECECEC" CornerRadius="5" Padding="5" Margin="0,0,100,5">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnNewTab" Click="NewTab_Click" Style="{StaticResource MenuButtonStyle}" Width="100" Height="30" ToolTip="Nova Aba">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/newtab.png" Width="24" Height="24" Margin="0,0,5,0"/>
                        <TextBlock Text="Nova Aba"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSave" Click="Save_Click" Style="{StaticResource MenuButtonStyle}" Width="100" Height="30" Margin="10,0,0,0" ToolTip="Salvar">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/save.png" Width="24" Height="24" Margin="0,0,5,0"/>
                        <TextBlock Text="Salvar"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnRename" Click="Rename_Click" Style="{StaticResource MenuButtonStyle}" Width="100" Height="30" Margin="10,0,0,0" ToolTip="Renomear">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/rename.png" Width="24" Height="24" Margin="0,0,5,0"/>
                        <TextBlock Text="Renomear"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnDelete" Click="Delete_Click" Style="{StaticResource MenuButtonStyle}" Width="100" Height="30" Margin="10,0,0,0" ToolTip="Excluir">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/delete.png" Width="24" Height="24" Margin="0,0,5,0"/>
                        <TextBlock Text="Excluir"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnRunPython" Click="RunPython_Click" Style="{StaticResource MenuButtonStyle}" Width="120" Height="30" Margin="10,0,0,0" ToolTip="Executar Python">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/run.png" Width="24" Height="24" Margin="0,0,5,0"/>
                        <TextBlock Text="Executar Python"/>
                    </StackPanel>
                </Button>
                <ComboBox x:Name="docTypeComboBox" Width="120" Height="30" Margin="10,0,0,0" SelectionChanged="DocTypeComboBox_SelectionChanged" ToolTip="Tipo de Documento">
                    <ComboBoxItem Content="Texto Simples" IsSelected="True"/>
                    <ComboBoxItem Content="Python"/>
                </ComboBox>
                <ComboBox x:Name="fontSizeComboBox" Width="60" Height="30" Margin="10,0,0,0" SelectionChanged="FontSizeComboBox_SelectionChanged" ToolTip="Tamanho da Fonte">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14" IsSelected="True"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="18"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <TabControl x:Name="tabControl" Grid.Row="1" Background="#F5F5F5" BorderBrush="#D3D3D3" BorderThickness="1" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Novo Documento">
                <RichTextBox x:Name="richTextEditor" FontFamily="Consolas" FontSize="14" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            </TabItem>
        </TabControl>

        <Border Grid.Row="2" Background="#ECECEC" CornerRadius="5" Padding="5" Margin="0,5,20,0">
            <TextBox x:Name="outputBox" Height="100" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
        </Border>
    </Grid>
</Page>